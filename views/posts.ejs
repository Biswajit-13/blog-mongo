<!DOCTYPE html>
<html>
  <head>
    <title>Blog Posts</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom Styles -->
    <style>
      body {
        font-family: "Helvetica Neue", Arial, sans-serif;
        background-color: #f9f9f9;
      }

      .container {
        padding: 30px 0;
      }

      .mb-4 {
        margin-bottom: 2rem;
      }

      .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .card:hover {
        transform: translateY(-10px);
      }

      .card-title {
        font-size: 18px;
        font-weight: 600;
        color: #333;
      }

      .card-text {
        color: #666;
        line-height: 1.5;
        font-size: 16px;
      }

      .muted {
        color: #999;
      }

      .font-5 {
        font-size: 14px;
      }

      .btn-primary {
        background-color: #428bca;
        border-color: #428bca;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: bold;
      }

      .btn-primary:hover {
        background-color: #3071a9;
        border-color: #3071a9;
      }
      .card-img-top {
        height: 200px; /* Set a fixed height */
        object-fit: cover; /* Maintain aspect ratio and cover container */
      }
      .category{
        color: #ff028d;
      }
      .navbar{
      position: relative;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4"><%=selectedCategory %> blog posts</h1>
      <!-- posts.ejs -->

<!-- posts.ejs -->

<!-- Add the following code inside the <div class="container py-4"> -->

  <div class="row mb-4 navbar">
    <div class="col-md-12">
      <ul class="list-inline">
        <li class="list-inline-item">
          <a href="/posts" class="<%= !selectedCategory ? 'font-weight-bold' : '' %> category">#All</a>
        </li>
        <% for (const category of categories) { %>
          <li class="list-inline-item">
            <a href="/posts?category=<%= category %>" class="<%= selectedCategory === category ? 'font-weight-bold' : '' %> category">#<%= category %></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
  
  <!-- Continue with the rest of the code in posts.ejs as it was before -->
  
  

      <a href="/posts/new" class="btn btn-primary mb-4">Create New Post</a>

      <div class="row">
        <% for (const post of blogPosts) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if (post.blogPicture) { %>
            <img
              src="<%= post.blogPicture %>"
              class="card-img-top"
              alt="Blog Picture"
            />
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= post.title.slice(0,150) %></h5>
              <p class="card-text"><%= post.content.slice(0, 150) %>...</p>
              <p class="muted font-5"><%= post.date.toLocaleDateString() %></p>
              <% if (post.category) { %>
              <p class="font-weight-bold category">#<%= post.category %></p>
              <% } %>
              <a
                href="/posts/<%= post._id %>"
                target="_blank"
                class="btn btn-primary"
                >Read More</a
              >
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Bootstrap JavaScript (place it before the closing </body> tag) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
